<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_language"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginBottom="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 中文选项 -->
        <LinearLayout
            android:id="@+id/languageZhLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/dialog_input_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/chinese"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/checkZh"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/tishi"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <!-- 英文选项 -->
        <LinearLayout
            android:id="@+id/languageEnLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/dialog_input_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/english"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/checkEn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/tishi"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <!-- 德语选项 -->
        <LinearLayout
            android:id="@+id/languageDeLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/dialog_input_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/german"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/checkDe"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/tishi"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/dialog_button_cancel"
            android:minWidth="80dp"
            android:text="@string/cancel"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <Button
            android:layout_weight="1"
            android:id="@+id/confirmButton"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:background="@drawable/dialog_button_confirm"
            android:minWidth="80dp"
            android:text="@string/confirm"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>

