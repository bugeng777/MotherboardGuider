<!-- 在drawable目录下创建text_underline.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="-2dp"
        android:right="-2dp"
        android:top="-1dp">
        <shape>
            <solid android:color="#00000000" /> <!-- 透明色 -->
            <stroke
                android:width="1dp"
                android:color="#666666" /> <!-- 下划线颜色 -->
        </shape>
    </item>
</layer-list>